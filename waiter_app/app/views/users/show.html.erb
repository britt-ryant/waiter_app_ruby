<h1><%= @user[:email] %>:</h1>
<%= link_to "Add some dishes!", dishes_path %>
<% if @user.dishes.length > 0 %>
  <% @user.dishes.each do |dish| %>
      <p><%= link_to "#{dish[:name]}", dish_path(dish.id) %></p>
      <%= link_to "Delete this dish from your order?", user_dish_path(dish.id), method: :delete %><br>
  <% end %>
<% else %>
  <% if current_user.auth == 2 %>
    <p><%= @user.email %> haven't ordered anything yet.</p>
  <% else %>
    <p>You haven't ordered yet?</p>
  <% end %>
<% end %>
<% if @user.ingredients.length > 0 %>
  <strong>Alergies:</strong>
  <% @user.ingredients.each do |ingredient| %>
    <p><%= ingredient[:name] %></p>
    <%= link_to "Remove this Allergy", user_ingredient_path(ingredient.id), method: :delete %>
  <% end %>
<% else %>
  <% if current_user.auth == 2 %>
    <p><%= @user.email %> doesn't have any allergies at their table.</p>
  <% else %>
    <p>No allergies at your table? That can't be correct...</p>
  <% end %>
<% end %>
